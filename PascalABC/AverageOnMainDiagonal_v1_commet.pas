PROGRAM MainDiagonalAverage; {Оголошення програми для обчислення середнього арифметичного головної діагоналі}
VAR
  A: ARRAY[1..10, 1..10] OF REAL; {Оголошення двовимірного масиву розміром 10x10 для зберігання чисел}
  N, I: INTEGER; {Оголошення змінних N для розміру матриці і I для індексації}
  Sum, Avg: REAL; {Змінні Sum для суми елементів та Avg для середнього арифметичного}
BEGIN
  WRITELN('Enter the size of the matrix (N): '); {Виведення повідомлення для введення розміру матриці}
  READLN(N); {Зчитування розміру матриці від користувача}
  
  WRITELN('Enter the elements of the matrix:'); {Запит на введення елементів матриці}
  FOR I := 1 TO N DO {Цикл для проходу по рядках матриці}
    FOR J := 1 TO N DO {Вкладений цикл для проходу по стовпцях}
      READ(A[I, J]); {Зчитування значення елемента матриці}
  
  Sum := 0; {Ініціалізація суми елементів головної діагоналі}
  FOR I := 1 TO N DO {Цикл для проходу по елементах головної діагоналі}
    Sum := Sum + A[I, I]; {Додавання елементів головної діагоналі до змінної Sum}
  
  Avg := Sum / N; {Обчислення середнього арифметичного елементів головної діагоналі}
  
  WRITELN('The average of the main diagonal is: ', Avg:0:2); {Виведення середнього арифметичного}
END. {Кінець програми}
